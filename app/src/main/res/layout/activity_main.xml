<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_gradiente"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/nombreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/afacad"
        android:text="Salud 360"
        android:textColor="@color/grisOsc"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonIniciarSesion"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/boton_transparente"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/afacad"
        android:text="Iniciar sesión"
        android:textColor="#9EA9DD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreApp" />

    <Button
        android:id="@+id/buttonRegistrate"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/boton_color"
        android:backgroundTint="#FFFCFC"
        android:fontFamily="@font/afacad"
        android:text="Regístrate"
        android:textColor="#020202"
        android:textSize="20sp"
        app:backgroundTint="@color/azulF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonIniciarSesion" />

</androidx.constraintlayout.widget.ConstraintLayout>
